{
  "extends": "astro/tsconfigs/strictest",
  "exclude": [
    "node_modules",
    "public",
    "dist"
  ],
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@data/*": ["data/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"]
    }
  }
}

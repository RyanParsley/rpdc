---
type Image = {
	url: string;
	alt: string;
};

type Props = {
	images: Image[];
};

const { images } = Astro.props;
---

<div class="gallery">
	{
		images.map((image: Image) => (
			<figure>
				<img src={image.url} alt={image.alt} />
			</figure>
		))
	}
</div>

<style lang="scss">
	.gallery {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		grid-gap: 0.5rem;
	}

	.gallery img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
	}

	.gallery > figure {
		margin: 0;
		padding: 0;
		grid-column: 1fr;
		grid-row: 1fr;
	}
</style>

---
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import Gallery from "@components/ImageGallery.astro";
import Post from "@layouts/Post.astro";
import RelatedPosts from "@components/RelatedPosts.astro";
import Backlinks from "@components/Backlinks.astro";
const { slug } = Astro.props;

export async function getStaticPaths() {
	const posts = await getCollection("blog");
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await post.render();
const canonicalURL = new URL(`blog/${slug}`, Astro.site)
	.toString()
	.replace(".html", "");
---

<Post {...post.data} canonicalURL={canonicalURL}>
	{post.data.gallery && <Gallery images={post.data.gallery} />}
	<Content />
	<Backlinks currentSlug=`/blog/${slug}` slot="aside" />
	{
		post.data.categories && (
			<RelatedPosts
				slot="aside"
				categories={post.data.categories}
				slug={post.slug}
			/>
		)
	}
</Post>

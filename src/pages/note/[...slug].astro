---
import { getCollection } from "astro:content";
import Post from "@layouts/Post.astro";
import BlogGallery from "@components/BlogGallery.astro";
import Tags from "@components/Tags.astro";
import Backlinks from "@components/Backlinks.astro";
const { slug } = Astro.props;
const posts = await getCollection("note");

export async function getStaticPaths() {
	const posts = await getCollection("note");

	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}

const post = Astro.props;
const { Content } = await post.render();
---

<Post {...post.data}>
	{post.data.gallery && <BlogGallery images={post.data.gallery} />}
	<Content />
	<Backlinks currentSlug={slug} slot="aside" />
	<Tags collection={posts} baseRoute="note/tag" slot="aside" />
</Post>

---
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import BlogPost from "@layouts/BlogPost.astro";
import BlogGallery from "@components/BlogGallery.astro";
import Tags from "@components/Tags.astro";

const posts = await getCollection("note");
type Props = CollectionEntry<"note">;

export async function getStaticPaths() {
	const posts = await getCollection("note");

	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}

const post = Astro.props;
const { Content } = await post.render();
---

<BlogPost {...post.data}>
	{post.data.gallery && <BlogGallery images={post.data.gallery} />}
	<Content />
	<Tags Props collection={posts} baseRoute="note/tag" slot="aside" />
</BlogPost>

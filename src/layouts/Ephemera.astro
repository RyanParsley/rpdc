---
import Layout from "@layouts/Page.astro";
import Gallery from "@components/ImageGallery.astro";
import WebmentionShare from "@components/WebmentionShare.astro";
import Webmentions from "@components/Webmentions.astro";
import SubscribeBlock from "@components/SubscribeBlock.astro";
import ElsewhereBlock from "@components/ElsewhereBlock.astro";
import type { ImageMetadata } from "astro";
import type { ImageData } from "@components/ImageGallery.astro";
import YoutubeEmbed from "@components/YoutubeEmbed.astro";

interface Props {
	title: string;
	description: string;
	youtube?: string | undefined;
	canonicalURL: string;
	gallery?: ImageData[];
	galleryPath?: string;
	heroImage?: ImageMetadata | undefined;
	OGImage?: ImageMetadata | undefined;
	syndication: { title: string; href: string }[];
}

const {
	title,
	description,
	youtube,
	heroImage,
	canonicalURL,
	gallery,
	galleryPath,
	OGImage,
	syndication,
} = Astro.props;
---

<Layout
	class="has-aside"
	title={title}
	description={description}
	image={OGImage}
>
	<article class="h-entry">
		{heroImage && <img width={720} height={360} src={heroImage.src} alt="" />}
		<section class="e-content">
			{gallery && <Gallery images={gallery} path={galleryPath || ""} />}
			{youtube && <YoutubeEmbed src={youtube} />}
			<slot />
			{
				syndication.length > 0 && (
					<div>
						Also on:
						{syndication.map((site) => (
							<a href={site.href} class="u-syndication syndication">
								{site.title}
							</a>
						))}
					</div>
				)
			}
			<WebmentionShare postUrl={Astro.url.href} postTitle={title} />
			<Webmentions target={canonicalURL} />
			<p>
				Published by <a
					rel="author"
					class="p-author h-card"
					href="http://ryanparsley.com">Ryan Parsley</a
				>
				<a href={Astro.url.href} class="u-url">{title}</a>
			</p>
		</section>
	</article>
	<aside>
		<slot name="aside" />
		<SubscribeBlock />
		<ElsewhereBlock />
	</aside>
</Layout>
<style lang="scss">
	a.syndication {
		display: inline-block;
		margin-right: 1rem;
	}
</style>

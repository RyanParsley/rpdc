#!/bin/bash

#!/bin/bash

# CloudCannon Postbuild Hook - POSSE Syndication Validation
# Git operations are handled directly by the POSSE integration during build

echo "🔄 CloudCannon Postbuild: Validating POSSE syndication..."

# Check if ephemera directory exists
EPHEMERA_DIR="src/content/ephemera"
if [ ! -d "$EPHEMERA_DIR" ]; then
    echo "ℹ️  Ephemera directory not found: $EPHEMERA_DIR"
    echo "✨ CloudCannon Postbuild: Complete"
    exit 0
fi

# Count ephemera files with syndication links
SYNDICATION_COUNT=$(grep -r "syndication:" "$EPHEMERA_DIR" 2>/dev/null | wc -l)
echo "📊 Syndication links found: $SYNDICATION_COUNT"

# Check total ephemera files
EPHEMERA_FILE_COUNT=$(find "$EPHEMERA_DIR" -name "*.md" 2>/dev/null | wc -l)
echo "📊 Total ephemera files: $EPHEMERA_FILE_COUNT"

# Check for recent ephemera files (last 24 hours)
RECENT_FILES=$(find "$EPHEMERA_DIR" -name "*.md" -mtime -1 2>/dev/null | wc -l)
echo "📊 Recent ephemera files (24h): $RECENT_FILES"

if [ "$SYNDICATION_COUNT" -gt 0 ]; then
    echo "✅ POSSE syndication completed successfully"
    echo "📝 Changes have been committed and pushed to GitHub during the build process"
    echo "🔄 No additional sync needed - git operations handled by POSSE integration"
elif [ "$RECENT_FILES" -gt 0 ]; then
    echo "⚠️  Recent ephemera files found but no syndication links detected"
    echo "🔍 This may indicate POSSE processing didn't complete or failed"
else
    echo "ℹ️  No recent ephemera posts to syndicate (this is normal)"
fi

echo "✨ CloudCannon Postbuild: Validation Complete"

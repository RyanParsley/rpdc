{
  "name": "rpdc-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "npx eslint ./src --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:style": "npx stylelint '**/*.{css,astro}' --fix",
    "format": "prettier **/*.{css,astro,js,ts,yml,json} --write",
    "prepare": "husky install"
  },
  "lint-staged": {
    "!(public/**/*)*.{js,ts,astro}": [
      "eslint --fix"
    ],
    "*.{css,scss,astro}": "stylelint --fix",
    "*.{css,astro,js,ts,yml,json}": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@astrojs/check": "^0.5.5",
    "@astrojs/mdx": "^2.1.1",
    "@astrojs/rss": "^4.0.5",
    "@astrojs/sitemap": "^3.1.1",
    "@fontsource/roboto-mono": "^5.0.16",
    "@fontsource/victor-mono": "^5.0.11",
    "accessible-astro-components": "^2.3.5",
    "astro": "^4.4.2",
    "autoprefixer": "^10.4.17",
    "cssnano": "^6.0.3",
    "photoswipe": "^5.4.3",
    "sass": "^1.71.1",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@astrojs/partytown": "^2.0.4",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.31.4",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss-html": "^1.6.0",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "stylelint": "^16.2.1",
    "stylelint-config-astro": "^1.0.4",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^36.0.0"
  }
}

{
  "name": "rpdc-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "npx eslint ./src",
    "lint:style": "npx stylelint '**/*.{css,astro}' --fix",
    "format": "prettier **/*.{css,astro,js,ts,yml,json} --write",
    "postinstall": "npx playwright install chromium",
    "prepare": "husky",
    "postbuild": "pagefind --site dist",
    "new-content": "node scripts/new-content.js",
    "new:ephemera": "npm run new-content -- --type ephemera",
    "new:blog": "npm run new-content -- --type blog",
    "new:note": "npm run new-content -- --type note",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:typecheck": "vitest run --typecheck"
  },
  "lint-staged": {
    "!(public/**/*)*.{js,ts,astro}": [
      "eslint --fix"
    ],
    "*.{css,scss,astro}": "stylelint --fix",
    "*.{css,astro,js,ts,yml,json}": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.3.1",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.2",
    "@fontsource/roboto-mono": "^5.2.6",
    "@fontsource/victor-mono": "^5.2.6",
    "accessible-astro-components": "^4.1.2",
    "astro": "^5.12.4",
    "astro-embed": "^0.9.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.0",
    "photoswipe": "^5.4.4",
    "sass": "^1.89.2"
  },
  "devDependencies": {
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/ts-plugin": "^1.10.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint__js": "^9.14.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.18.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "astro-pagefind": "^1.8.3",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^16.1.2",
    "markdown-it": "^14.1.0",
    "msw": "^2.11.0",
    "playwright": "^1.54.1",
    "postcss-html": "^1.8.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "remark-mermaidjs": "^7.0.0",
    "stylelint": "^16.22.0",
    "stylelint-config-astro": "^1.0.4",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^38.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^2.1.9"
  }
}

{
  "name": "rpdc-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "NODE_OPTIONS=--max_old_space_size=8192 astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "npx eslint ./src --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:style": "npx stylelint '**/*.{css,astro}' --fix",
    "format": "prettier **/*.{css,astro,js,ts,yml,json} --write",
    "prepare": "husky install"
  },
  "lint-staged": {
    "!(public/**/*)*.{js,ts,astro}": [
      "eslint --fix"
    ],
    "*.{css,scss,astro}": "stylelint --fix",
    "*.{css,astro,js,ts,yml,json}": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@astrojs/check": "^0.8.2",
    "@astrojs/mdx": "^3.1.3",
    "@astrojs/rss": "^4.0.7",
    "@astrojs/sitemap": "^3.1.6",
    "@fontsource/roboto-mono": "^5.0.18",
    "@fontsource/victor-mono": "^5.0.13",
    "accessible-astro-components": "^2.3.6",
    "astro": "^4.12.2",
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.4",
    "photoswipe": "^5.4.4",
    "sass": "^1.77.8",
    "typescript": "^5.5.3"
  },
  "devDependencies": {
    "@astrojs/partytown": "^2.1.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.2.3",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "postcss-html": "^1.7.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^16.7.0",
    "stylelint-config-astro": "^1.0.4",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^36.0.1"
  }
}

{
  "name": "rpdc-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "npx eslint ./src",
    "lint:style": "npx stylelint '**/*.{css,astro}' --fix",
    "format": "prettier **/*.{css,astro,js,ts,yml,json} --write",
    "postinstall": "npx playwright install chromium",
    "prepare": "husky",
    "postbuild": "pagefind --site dist"
  },
  "lint-staged": {
    "!(public/**/*)*.{js,ts,astro}": [
      "eslint --fix"
    ],
    "*.{css,scss,astro}": "stylelint --fix",
    "*.{css,astro,js,ts,yml,json}": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.2.6",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.4.0",
    "@fontsource/roboto-mono": "^5.2.5",
    "@fontsource/victor-mono": "^5.2.5",
    "accessible-astro-components": "^4.1.1",
    "astro": "^5.7.13",
    "astro-embed": "^0.9.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.7",
    "photoswipe": "^5.4.4",
    "sass": "^1.88.0"
  },
  "devDependencies": {
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/ts-plugin": "^1.10.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@types/eslint__js": "^9.14.0",
    "@types/markdown-it": "^14.1.2",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "astro-pagefind": "^1.8.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-astro": "^1.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "markdown-it": "^14.1.0",
    "playwright": "^1.52.0",
    "postcss-html": "^1.8.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "remark-mermaidjs": "^7.0.0",
    "stylelint": "^16.19.1",
    "stylelint-config-astro": "^1.0.4",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^38.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}

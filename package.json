{
  "name": "rpdc-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "npx eslint ./src",
    "lint:style": "npx stylelint '**/*.{css,astro}' --fix",
    "format": "prettier **/*.{css,astro,js,ts,yml,json} --write",
    "postinstall": "npx playwright install chromium",
    "prepare": "husky",
    "postbuild": "pagefind --site dist"
  },
  "lint-staged": {
    "!(public/**/*)*.{js,ts,astro}": [
      "eslint --fix"
    ],
    "*.{css,scss,astro}": "stylelint --fix",
    "*.{css,astro,js,ts,yml,json}": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^3.1.8",
    "@astrojs/rss": "^4.0.9",
    "@astrojs/sitemap": "^3.2.1",
    "@fontsource/roboto-mono": "^5.1.0",
    "@fontsource/victor-mono": "^5.1.0",
    "accessible-astro-components": "^2.3.6",
    "astro": "^4.16.6",
    "astro-embed": "^0.7.4",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "photoswipe": "^5.4.4",
    "sass": "^1.79.4"
  },
  "devDependencies": {
    "@astrojs/partytown": "^2.1.2",
    "@astrojs/ts-plugin": "^1.10.3",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.12.0",
    "@types/eslint__js": "^8.42.3",
    "@types/markdown-it": "^14.1.2",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "astro-pagefind": "^1.6.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.2.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "markdown-it": "^14.1.0",
    "playwright": "^1.48.0",
    "postcss-html": "^1.7.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "remark-mermaidjs": "^7.0.0",
    "stylelint": "^16.9.0",
    "stylelint-config-astro": "^1.0.4",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1"
  }
}
